---
import { Linkedin, Twitter, Facebook, Instagram, Youtube, Zap, MapPin, Phone, Mail } from "lucide-astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();

const navItems = [
  { label: t("nav.home"), href: "#" },
  { label: t("nav.about"), href: "#about" },
  { label: t("nav.what_we_do"), href: "#what-we-do" },
  { label: t("nav.article"), href: "#article" },
  { label: t("nav.contact"), href: "#contact" },
];
---

<footer class="bg-slate-50 border-t border-slate-200 pt-16 pb-8" id="contact">
  <div class="container mx-auto px-6 max-w-7xl">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
      <!-- Brand & Social -->
      <div class="lg:col-span-1">
        <a href={`/${lang === "id" ? "id" : ""}`} class="flex items-center gap-2 mb-6">
          <div class="p-1.5 bg-brand-primary rounded-lg text-white">
            <Zap class="w-5 h-5" />
          </div>
          <span class="text-xl font-bold text-slate-900">RUANJITECH</span>
        </a>
        <p class="text-slate-600 text-sm leading-relaxed mb-6">
          {t("footer.brand.desc")}
        </p>
        <div class="flex gap-3">
          <a href="#" class="w-8 h-8 flex items-center justify-center rounded-full bg-white border border-slate-200 text-slate-500 hover:text-brand-primary hover:border-brand-primary/50 transition-all duration-300" aria-label="LinkedIn">
            <Linkedin class="w-4 h-4" />
          </a>
          <a href="#" class="w-8 h-8 flex items-center justify-center rounded-full bg-white border border-slate-200 text-slate-500 hover:text-brand-primary hover:border-brand-primary/50 transition-all duration-300" aria-label="Twitter">
            <Twitter class="w-4 h-4" />
          </a>
          <a href="#" class="w-8 h-8 flex items-center justify-center rounded-full bg-white border border-slate-200 text-slate-500 hover:text-brand-primary hover:border-brand-primary/50 transition-all duration-300" aria-label="Facebook">
            <Facebook class="w-4 h-4" />
          </a>
          <a href="#" class="w-8 h-8 flex items-center justify-center rounded-full bg-white border border-slate-200 text-slate-500 hover:text-brand-primary hover:border-brand-primary/50 transition-all duration-300" aria-label="Instagram">
            <Instagram class="w-4 h-4" />
          </a>
          <a href="#" class="w-8 h-8 flex items-center justify-center rounded-full bg-white border border-slate-200 text-slate-500 hover:text-brand-primary hover:border-brand-primary/50 transition-all duration-300" aria-label="YouTube">
            <Youtube class="w-4 h-4" />
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="lg:col-span-1 lg:pl-8">
        <h3 class="font-bold text-slate-900 mb-6">{t("footer.col.links")}</h3>
        <ul class="space-y-3">
          {
            navItems.map((item) => (
              <li>
                <a href={item.href} class="text-slate-600 hover:text-brand-primary transition-colors text-sm font-medium">
                  {item.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Contact Info -->
      <div class="lg:col-span-2">
        <h3 class="font-bold text-slate-900 mb-6">{t("footer.col.contact")}</h3>
        <div class="grid sm:grid-cols-2 gap-6">
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 rounded-full bg-brand-primary/5 flex items-center justify-center flex-shrink-0 text-brand-primary">
              <MapPin class="w-5 h-5" />
            </div>
            <div>
              <span class="block text-xs font-semibold text-slate-400 uppercase tracking-wider mb-1">{t("footer.label.address")}</span>
              <p class="text-slate-600 text-sm leading-relaxed">
                {t("footer.address")}
              </p>
            </div>
          </div>

          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 rounded-full bg-brand-primary/5 flex items-center justify-center flex-shrink-0 text-brand-primary">
                <Mail class="w-5 h-5" />
              </div>
              <div>
                <span class="block text-xs font-semibold text-slate-400 uppercase tracking-wider mb-1">{t("footer.label.email")}</span>
                <a href={`mailto:${t("footer.email")}`} class="text-slate-600 text-sm hover:text-brand-primary transition-colors">
                  {t("footer.email")}
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-10 h-10 rounded-full bg-brand-primary/5 flex items-center justify-center flex-shrink-0 text-brand-primary">
                <Phone class="w-5 h-5" />
              </div>
              <div>
                <span class="block text-xs font-semibold text-slate-400 uppercase tracking-wider mb-1">{t("footer.label.phone")}</span>
                <a href={`tel:${t("footer.phone")}`} class="text-slate-600 text-sm hover:text-brand-primary transition-colors">
                  {t("footer.phone")}
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom -->
    <div class="pt-8 border-t border-slate-200 flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-slate-500">
      <p>&copy; {currentYear} {t("footer.rights")}</p>
      <div class="flex flex-wrap justify-center gap-6">
        <a href="#" class="hover:text-slate-900 transition-colors">{t("footer.link.privacy")}</a>
        <a href="#" class="hover:text-slate-900 transition-colors">{t("footer.link.terms")}</a>
        <a href="#" class="hover:text-slate-900 transition-colors">{t("footer.link.cookie")}</a>
      </div>
    </div>
  </div>
</footer>
