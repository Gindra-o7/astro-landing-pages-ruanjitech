---
import { getLangFromUrl, useTranslations } from "../../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="py-24 bg-white border-b border-slate-200">
  <div class="container mx-auto px-6 max-w-4xl text-center">
    <span class="inline-block py-1 px-3 rounded-full bg-slate-100 text-brand-primary text-xs font-semibold tracking-wider mb-6">
      {t("about.title")}
    </span>
    <h2 class="text-3xl lg:text-5xl font-bold text-slate-900 leading-tight mb-8">
      {t("about.desc")}
    </h2>
    <div class="w-24 h-1 bg-brand-primary mx-auto rounded-full"></div>
  </div>
</section>
