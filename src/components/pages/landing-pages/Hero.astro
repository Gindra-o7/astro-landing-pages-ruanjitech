---
import { ArrowRight, CheckCircle2 } from "lucide-astro";
import { getLangFromUrl, useTranslations } from "../../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="relative bg-white lg:pt-32 pt-20 pb-20 overflow-hidden">
  <div class="container mx-auto px-6 max-w-7xl relative z-10">
    <div class="flex flex-col lg:flex-row items-center gap-16">
      <!-- Content -->
      <div class="lg:w-1/2 text-center lg:text-left">
        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-brand-primary/10 text-brand-primary text-sm font-medium mb-6">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-brand-primary opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-brand-primary"></span>
          </span>
          {t("hero.badge")}
        </div>
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-slate-900 leading-[1.15] mb-6 tracking-tight">
          {t("hero.title.part1")}
          <span class="text-brand-primary">{t("hero.title.highlight")}</span>
          {t("hero.title.part2")}
        </h1>
        <p class="text-lg text-slate-600 mb-8 leading-relaxed max-w-xl mx-auto lg:mx-0">
          {t("hero.desc")}
        </p>

        <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-4">
          <a href="#" class="px-8 py-3.5 bg-brand-primary text-white font-semibold rounded-lg shadow-lg shadow-brand-primary/25 hover:bg-brand-primary-dark transition-all flex items-center gap-2">
            {t("hero.cta.consult")}
            <ArrowRight class="w-4 h-4" />
          </a>
          <a href="#" class="px-8 py-3.5 bg-white text-slate-700 font-semibold rounded-lg border border-slate-200 hover:bg-slate-50 transition-all"> {t("hero.cta.portfolio")} </a>
        </div>

        <div class="mt-8 flex items-center justify-center lg:justify-start gap-6 text-sm text-slate-500 font-medium">
          <div class="flex items-center gap-2">
            <CheckCircle2 class="w-4 h-4 text-brand-primary" />
            <span>{t("hero.trust.1")}</span>
          </div>
          <div class="flex items-center gap-2">
            <CheckCircle2 class="w-4 h-4 text-brand-primary" />
            <span>{t("hero.trust.2")}</span>
          </div>
          <div class="flex items-center gap-2">
            <CheckCircle2 class="w-4 h-4 text-brand-primary" />
            <span>{t("hero.trust.3")}</span>
          </div>
        </div>
      </div>

      <!-- Right Visual (Mockup Placeholder) -->
      <div class="hidden lg:block lg:w-1/2 w-full relative">
        <div class="relative rounded-2xl bg-slate-100 border border-slate-200 p-2 shadow-2xl">
          <div class="aspect-[16/10] bg-white rounded-xl overflow-hidden relative">
            <!-- Simple Dashboard Mockup Representation -->
            <div class="absolute inset-0 bg-slate-50">
              <!-- Sidebar -->
              <div class="absolute left-0 top-0 bottom-0 w-16 bg-white border-r border-slate-200 flex flex-col items-center py-4 gap-4">
                <div class="w-8 h-8 rounded-lg bg-brand-primary/10"></div>
                <div class="w-6 h-6 rounded bg-slate-100"></div>
                <div class="w-6 h-6 rounded bg-slate-100"></div>
                <div class="w-6 h-6 rounded bg-slate-100"></div>
              </div>
              <!-- Header -->
              <div class="absolute left-16 top-0 right-0 h-14 bg-white border-b border-slate-200 flex items-center px-6 justify-between">
                <div class="w-32 h-4 rounded bg-slate-100"></div>
                <div class="w-8 h-8 rounded-full bg-slate-200"></div>
              </div>
              <!-- Content -->
              <div class="absolute left-16 top-14 right-0 bottom-0 p-6 flex gap-4">
                <div class="flex-1 space-y-4">
                  <div class="h-32 rounded-xl bg-white border border-slate-200 shadow-sm p-4">
                    <div class="w-20 h-4 rounded bg-slate-100 mb-4"></div>
                    <div class="w-12 h-8 rounded bg-brand-primary/10"></div>
                  </div>
                  <div class="h-48 rounded-xl bg-white border border-slate-200 shadow-sm"></div>
                </div>
                <div class="w-1/3 space-y-4">
                  <div class="h-full rounded-xl bg-white border border-slate-200 shadow-sm"></div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Decoration Dots -->
        <div class="absolute -z-10 -bottom-10 -right-10 w-64 h-64 bg-slate-100 rounded-full blur-3xl opacity-60"></div>
        <div class="absolute -z-10 -top-10 -left-10 w-64 h-64 bg-brand-primary/5 rounded-full blur-3xl opacity-60"></div>
      </div>
    </div>
  </div>
</section>
