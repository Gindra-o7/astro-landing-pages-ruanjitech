// Note: For a real production app I would import specific brand icons from a library like simple-icons-astro
// But for now I'll use text labels and generic lucide icons to ensure it works without extra deps.
import { Database, Code2, Server, Globe } from "lucide-astro";
import { getLangFromUrl, useTranslations } from "../../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const techStack = [
  { name: "React", icon: Code2, color: "text-blue-500" },
  { name: "Astro", icon: Globe, color: "text-orange-500" },
  { name: "PostgreSQL", icon: Database, color: "text-blue-600" },
  { name: "Node.js", icon: Server, color: "text-green-500" },
];
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-6 max-w-7xl">
    <div class="text-center mb-10">
      <h3 class="text-lg font-semibold text-slate-500 uppercase tracking-wider">{t("techstack.title")}</h3>
    </div>

    <div class="flex flex-wrap justify-center items-center gap-12 md:gap-20 opacity-70">
      {
        techStack.map((tech) => (
          <div class="flex flex-col items-center gap-3 group cursor-default transition-opacity hover:opacity-100">
            <div class={`p-4 rounded-2xl bg-slate-50 group-hover:bg-white group-hover:shadow-lg transition-all duration-300 border border-transparent group-hover:border-slate-100`}>
              <tech.icon class={`w-10 h-10 text-slate-400 group-hover:${tech.color} transition-colors`} />
            </div>
            <span class="text-sm font-medium text-slate-500 group-hover:text-slate-900 transition-colors">{tech.name}</span>
          </div>
        ))
      }
    </div>
  </div>
</section>
